{
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnType": true
  },
  "cSpell.userWords": [
    "Apacer",
    "jgaines",
    "NTFS",
    "nvme",
    "revset"
  ],
  // "chat.instructionsFilesLocations": {
  //   ".github/CONTRIBUTING.md": true
  // },
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.rulers": [
    80,
    120
  ],
  "errorLens.excludeBySource": [
    "cSpell"
  ],
  "errorLens.messageEnabled": false,
  "files.associations": {
    ".copilot-instructions.md": "markdown"
  },
  "files.autoSave": "afterDelay",
  "files.simpleDialog.enable": true,
  "git.autofetch": true,
  "gitblame.ignoreWhitespace": true,
  "githd.blameView.enabled": false,
  "github.copilot.advanced": {},
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  // "github.copilot.chat.reviewSelection.instructions": [
  //   {
  //     "file": ".copilot-review-instructions.md"
  //   },
  //   {
  //     "text": "Resolve all TODO tasks."
  //   }
  // ],
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "markdown": true
  },
  "github.copilot.nextEditSuggestions.enabled": false,
  "julia.NumThreads": 4,
  "julia.enableTelemetry": true,
  "julia.symbolCacheDownload": true,
  "mise.binPath": "/home/jgaines/.local/bin/mise",
  "projectManager.git.baseFolders": [
    "/home/jgaines/projects"
  ],
  "python.defaultInterpreterPath": "/home/jgaines/projects/zigup/.venv",
  "python.experiments.optInto": [],
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": false,
  "terminal.integrated.automationProfile.linux": {
    "args": [
      "--login"
    ],
    "icon": "terminal-bash",
    "path": "/bin/bash"
  },
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "args": [
        "--login"
      ],
      "icon": "terminal-bash",
      "path": "/bin/bash"
    },
    "zsh": {
      "icon": "terminal",
      "path": "/bin/zsh"
    }
  },
  "window.dialogStyle": "custom",
  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.ipynb": "jupyter-notebook",
    "*.md": "default"
  },
  "workbench.iconTheme": "helium-icon-theme",
  "workbench.startupEditor": "none",
  "zig.path": "zig",
  "zig.zls.path": "zls",
  "write-good.only-lint-on-save": true,
  "write-good.languages": [
    "markdown",
    "text"
  ],
  "github.copilot.nextEditSuggestions.fixes": true,
  "docker.extension.enableComposeLanguageServer": false
}
